<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 
<mapper namespace="mapper.userMapper">
	<select id="login" parameterType="com.codingquokka.hansungenquete.domain.UserVO" resultType="com.codingquokka.hansungenquete.domain.UserVO">
		select *
		from user
		where stuId=#{stuId} and password=#{password}
	</select>
	
	 <!-- 총유권자수 계산  -->
	<select id = "totalvoters" resultType = "int">
		select COUNT(*)
		from user
		where department=#{departement}
	</select>
	
	
	
	
</mapper>